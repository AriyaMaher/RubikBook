@model RubikBook.Core.ViewModels.LoginViewModel;
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
}




<form asp-controller="account" asp-action="Login">
    <div style="direction:rtl;" class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="row border rounder-5 p-3 bg-white shadow box-area">
            <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box" style="background: #0568fd">
                <div class="featured-image mb-3">
                    <img style="width: 250px;" src="~/Image/Site/Login.png" class="img-fluid">
                </div>
                <p class="text-white fs-2" style="font-weight: 600;">Login</p>
@*                <small class="text-white text-wrap text-center" style="width: 17rem;">Lorem ipsum dolor sit amet consectetur, adipisicing</small>
*@            </div>

            <div class="col-md-6 right-box">
                <div class="row align-items-center">
                    <div class="header-text mb-4 text-center">
                        <h2 class="text-dark">صفحه ورود</h2>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Mobile" class="form-control form-control-lg bg-light fs6" placeholder="شماره تماس">
                    </div>
                    <div class="input-group mb-1">
                        <input id="myPass" asp-for="Password" class="form-control form-control-lg bg-light fs6" placeholder="رمز عبور" />
                    </div>
                    <div class="input-group mb-5 d-flex justify-content-between">
                        <div class="forgot">
                            <small><a href="#">فراموشی رمز عبور</a></small>
                        </div>
                    </div>
                    <div class="inpute-group mb-3">
                        <button type="submit" class="btn btn-lg btn-primary w-100 fs-6">Login</button>
                    </div>
@*                    <div class="inpute-group mb-3">
                        <button class="btn btn-lg btn-light w-100 fs-6"><img src="~/Image/Site/Google-Logo.png" style="width:20px" class="me-2"><small>Sign In With Google</small></button>
                    </div>*@
                    <div class="row">
                        <small class="text-dark">اکانت ندارید? <a asp-action="Register">ثبت نام کنید</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<script>
    function passFunction() {
        var x = document.getElementById("myPass");
        if(x.type === "password"{
            x.type = "text";
        } else{
            x.type = "password";
        }
    }
</script>


