@model RubikBook.Core.ViewModels.UserAddressViewModel

@{
    ViewData["Title"] = "AddUserAdddress";
    Layout = "~/Views/Shared/_UserProfileLayout.cshtml";
}

@{
    <div style="direction:rtl;" class="container p-3">
        <h2>ثبت آدرس جدید</h2>
    </div>
        <form asp-controller="Profile" asp-action="AddUserAdddress">
            <div style="direction:rtl;" class="container  p-3">

                <input asp-for="UserId" value="@ViewBag.UserId" readonly hidden class="form-control" />

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Fname">*نام </label>
                        <input asp-for="Fname" type="text" class="form-control" id="text1">
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Lname">*نام خانوادگی</label>
                        <input asp-for="Lname" type="text" class="form-control" id="text2">
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Phone">*شماره تماس</label>
                        <input asp-for="Phone" type="number" class="form-control" id="text1">
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="State">*استان</label>
                        <input asp-for="State" type="text" class="form-control" id="text2">
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="City">*شهر</label>
                        <input asp-for="City" type="text" class="form-control" id="text2">
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="FullAdress">*آدرس دقیق</label>
                        <input asp-for="FullAdress" type="text" class="form-control" id="text2">
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="PostalCode">*کد پستی</label>
                        <input asp-for="PostalCode" type="text" class="form-control" id="text2">
                    </div>

                </div>

                <input type="submit" value="اضافه کن" class="btn btn-success color-white mt-2" />


            </div>

        </form>
        <hr />



}






