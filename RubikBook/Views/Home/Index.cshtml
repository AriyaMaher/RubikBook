@model RubikBook.Core.ViewModels.AllViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container text-center">
    <div class="row">
        <div class="col-6 img-top">
            <img class="" src="~/Image/Site/6721758.jpg" width="100%" height="100%"  alt="" />
        </div>
        <div style="" class="col-lg-6 col-md-12 mt-5 text-right">
            <h1 class="fontr">فروشگاه کتاب <span class="text-success">روبیک بوک</span></h1>
            <p class="text-secondary"> فروش انواع کتاب انگلیسی و فارسی در دسته بندی های مختلف مثل رمان ، شعر ، سیاسی ، روانشناسی با بهترین قیمت و کیفیت </p>
            <a asp-controller="home" asp-action="AllProducts" class="btn btn-success"> مشاهده کتاب ها </a>
        </div>
    </div>
</div>



@*Products Slider Partial*@
<div class="container mt-5 text-center">
    <h1 style="font-size:33px;" class="text-center"><span class="text-success"> فروش</span> ویژه</h1>
    <hr class="hr-2">
    <div class="row row-cols-1 row-cols-md-4">
        <div class="owl-carousel">
            <partial name="ProductsSliderPartial" model="@Model.ProductsSellOff" />
        </div>
    </div>
</div>


@*Banner*@
<partial name="BannerPartial.cshtml" />



<div class="container">
    <h1 style="font-size:33px;" class="add-title text-center">لیست جدید کتاب ها</h1>
    <hr class="hr-2">
</div>
@*Products Partial*@
<partial name="ProductsPartial.cshtml" model="@Model.Products" />
<div class="container mt-md-3">
    <a asp-controller="Home" asp-action="AllProducts" class="btn btn-success mt-2"><span class="icon-arrow-left"></span>  مشاهده تمامی کتاب ها</a>
</div>























