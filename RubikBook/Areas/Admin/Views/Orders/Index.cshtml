@model IEnumerable<RubikBook.Database.Models.Factor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_PanelLayout.cshtml";
}

<h1>سفارش ها</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OpenDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CloseDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Send)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Des)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {


        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OpenDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CloseDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Send)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Des)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Mobile)
            </td>

                @if (item == null)
                {
                <h1 class="text-center"> سفارشی موجود نیست </h1>
                }

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
