@model RubikBook.Database.Models.Author

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_PanelLayout.cshtml";
}

<h2 class="p-2">@Model.AuthorName | جزئیات</h2>

<div class="container d-flex align-items-center justify-content-center">
    <hr />
    <dl class="row alert alert-info col-md-6 col-12">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorDes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorDes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NotShow)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NotShow)
        </dd>
    </dl>
</div>
<div class="container d-flex align-items-center justify-content-center">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success"> <span class="fa fa-edit"></span>ویرایش</a> |
    <a asp-action="Index" class="btn btn-warning"> <span class="fa fa-arrow-left"></span>برگشت</a>
</div>
